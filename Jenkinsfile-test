pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B package'
            }
        }
        stage("Create Docker image") {
            steps {
                script {
                    sh "docker build -t imagen-artefacto -f C:/ProgramData/Jenkins/.jenkins/workspace/trabajo-final-devops/target/Dockerfile C:/ProgramData/Jenkins/.jenkins/workspace/trabajo-final-devops/target/"
                }
            }
        }
    }
}
